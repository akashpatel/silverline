<h1>Listing rewards</h1>

<table>
  <tr>
    <th>Qr code</th>
    <th>Reward value</th>
    <th>Reward redeemed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rewards.each do |reward| %>
  <tr>
    <td><%= reward.qr_code %></td>
    <td><%= reward.reward_value %></td>
    <td><%= reward.reward_redeemed %></td>
    <td><%= link_to 'Show', reward %></td>
    <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
    <td><%= link_to 'Destroy', reward, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

