
<% content_for :ready do %>
	$('.assetBox a').lightBox();
	
	var $userAssetsContainer = $('#user_assets_container');
	$userAssetsContainer.imagesLoaded(function(){
		$userAssetsContainer.masonry({
			itemSelector: '.assetBox',
			isAnimated: true,
			isFitWidth: true
		});
	});
<% end %>

<div id="profile_header">
  <div id="profile_content" class="profileHeaderContainer">
      <img class="profileImage" src="<%=current_user.user_profile.image_path %>"/>
      <div id="profile_info">
          <h1><%=current_user.user_profile.full_name%></h1>
          <p>//Enter your tagline</p>
          <p>Lives in</p>
          <p>From</p>
          <p>Motivated by </p>
          <p>Passionate about</p>
      </div>
  </div>
</div>

</br></br>

<div id="create_profile_content">
    <%= render "shared/create_dream_form" %>
    <%= render "shared/create_asset_form" %>
</div>

</br></br>

<div id="user_assets_container" class="center">
	<% @user_assets.each do |asset|%>
		<div class="assetBox">
			<a href="<%= asset.image.url(:pinterest_lg) %>">
				<%= image_tag asset.image.url(:pinterest)%>
			</a>
		</div>
	<% end %>

    <% @user_dreams.each do |dream| %>
        <div class="assetBox">
          <p><%= dream.dream %></p>
        </div>
    <% end %>
</div>