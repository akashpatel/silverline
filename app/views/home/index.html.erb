<% content_for :ready do %>
	$('.assetBox a').lightBox();
	
	var $userAssetsContainer = $('#user_assets_container');
	$userAssetsContainer.imagesLoaded(function(){
		$userAssetsContainer.masonry({
			itemSelector: '.assetBox',
			isAnimated: true,
			isFitWidth: true
		});
	});

    $('.assetBox').mouseover(function() {

    });
<% end %>


<div id="user_assets_container" class="center">
	<% @quotes.each do |quote|%>
		<div class="assetBox shadow">
			<a href="#">
				<div class="assetBoxTopDiv">
					<blockquote><%= quote.description %></blockquote>
				</div>
			</a>
			<div class="assetBoxBottomDiv">
				<p><%= quote.author_name %></p>
			</div>
		</div>
	<% end %>
</div>