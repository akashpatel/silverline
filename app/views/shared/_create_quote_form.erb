<%= form_for :quote, :url => quotes_path do |f| %>
    <%= f.text_area :description, :placeholder => "Share a quote", :class => "span5", :size => "5x5" %>
	<%= select("quote", "author_id", Author.order('lower(name)').all.collect {|a| [ a.name, a.id ] }, {:prompt => 'Select Author'}) %>
    <%= link_to "Add Author", new_author_path %>
	<%= f.text_field :tag_list, :placeholder => "Add tags (comma separated)", :class => "span5" %>
	</br></br>
	<%= f.submit :class => "btn btn-info btn-large", :value => "Share It " %>
<% end %>
